<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_area :name, :cols => 40, :rows => 1%>
  </div>
  <div class="field">
    <%= f.label :date %><br />
    <%#= f.text_area :date, :cols => 40, :rows => 1 %>
    <%= f.date_select :date, :start_year => Time.now.year - 1 , :end_year => Time.now.year + 3, :current_year => Time.now.year %>
  </div>
  <div class="field">
    <%= f.label :time %><br />
    <%= f.text_area :time, :cols => 40, :rows => 2 %>
  </div>
  <div class="field">
    <%= f.label :place %><br />
    <%= f.text_area :place, :cols => 40, :rows => 3 %>
  </div>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_area :address, :cols => 40, :rows => 6 %>
  </div>
  <div class="field">
    <%= f.label :phone %><br />
    <%= f.telephone_field :phone %>
  </div>
  <div class="field">
    <%= f.label :other %><br />
    <%= f.text_area :other, :cols => 40, :rows => 6 %>
  </div>
  <div class="field">
     <div>
		<%- for menuitem in Menuitem.all %>
		  <div>
		    <%= check_box_tag "event[menuitem_ids][]", menuitem.id,
	@event.menuitems.include?(menuitem) %>
	        <%= menuitem.name %>
	      </div>
	    <%- end %>
	  </div>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
